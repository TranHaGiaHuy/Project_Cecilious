@page
@model Project_Cecilious.Pages.Dishes.DetailsModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<section class="title-bar">
	<div class="container">
		<div class="row">
			<div class="col-md-6">
				<div class="left-title-text">
					<h3>Meal Detail View</h3>
				</div>
			</div>
			<div class="col-md-6">
				<div class="right-title-text">
					<ul>
						<li class="breadcrumb-item"><a asp-page="/Index">Home</a></li>
						<li class="breadcrumb-item"><a asp-page="/Restaurants/Index" asp-route-id="@Model.Dish.RestaurantId">Restaurants</a></li>
						<li class="breadcrumb-item active" aria-current="page">Dish Detail View</li>
					</ul>
				</div>
			</div>
		</div>
	</div>
</section>
<!--title-bar end-->
<!--meal-detail-start-->
<section class="all-partners">
	<div class="container">
		<div class="row">
			<div class="col-lg-8 col-md-8">
				<div id="sync1" class="owl-carousel owl-theme">
					@foreach (var image in Model.Dish.DishImages)
					{
						<div class="item">
							<img src="@image.ImagePath" alt="">
						</div>
					}
				</div>

				<div id="sync2" class="owl-carousel owl-theme">
					@foreach (var image in Model.Dish.DishImages)
					{
						<div class="item">
							<img src="@image.ImagePath" alt="">
						</div>
					}
				</div>

				<div class="resto-meal-dt">
					<div class="resto-detail">
						<div class="resto-picy">
							<a asp-page="/Restaurants/Details" asp-route-id="@Model.Dish.RestaurantId"><img src="@Model.Dish.Restaurant.Logo" alt=""></a>
						</div>
						<div class="name-location">
							<a asp-page="/Restaurants/Details" asp-route-id="@Model.Dish.RestaurantId"><h1>@Model.Dish.Restaurant.RestaurantName</h1></a>
							<p><span><i class="fas fa-map-marker-alt"></i></span>@Model.Dish.Restaurant.RestaurantAddress.District, @Model.Dish.Restaurant.RestaurantAddress.Province</p>
						</div>
					</div>
					<div class="right-side-btns">
						<div class="resto-review-stars">
							@for (int i = 0; i < (int)@Model.totalReviewPoint; i++)
							{
								<i class="fas fa-star star"
								   style="--i: 0"></i>
							}
							@for (int i = 0; i < 5 - (int)@Model.totalReviewPoint; i++)
							{
								<i class="far fa-star star"
								   style="--i: 0"></i>
							}
							<span>@Model.totalReviewPoint<spam>/5</spam></span>
						</div>
					</div>
				</div>

				<div class="all-tabs">
				</div>
			</div>
			<div class="col-lg-4 col-md-4">
				<div class="right-side">
					<div class="new-heading t-bottom">
						<h1>Toasty Buns Burgers</h1>
					</div>
					<div class="about-meal">
						<h4> Description</h4>
						<p>@Model.Dish.Description</p>
						<hr />
					</div>
					<div class="price">
						<span>@Model.Dish.Price</span>
					</div>
					<div class="dt-detail">
						<ul>
						</ul>
					</div>
					<div class="order-now-check">
						<a href="@Model.currentRestaurant.RestaurantAddress.GoogleMapLink">
						<button class="on-btn btn-link" onclick="">
							Go to eat!</button>
						</a>
					</div>
				</div>

			</div>
		</div>
	</div>
</section>
<!--meal-deail end-->