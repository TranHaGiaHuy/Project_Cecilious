@page 
@model Project_Cecilious.Pages.Views.Dishes.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Dishes[0].DishName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dishes[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dishes[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dishes[0].LinkToShoppe)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dishes[0].Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dishes[0].DishCategory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dishes[0].Restaurant)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Dishes)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DishName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LinkToShoppe)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Image)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DishCategory.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Restaurant.RestaurantName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.DishId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.DishId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.DishId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
